<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/search_dialog"
            app:layout_constraintEnd_toEndOf="parent">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="        Do You Want To Exit ?"
                    android:padding="12dp"
                    android:background="@drawable/search_dialog"
                    android:ems="10"
                    android:textSize="18dp"
                    android:id="@+id/search_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0"/>
            <ImageButton
                    android:layout_width="36dp"
                    android:layout_height="34dp"
                    android:background="@drawable/ic_check_black_24dp"
                    android:id="@+id/tik_btn" app:layout_constraintStart_toEndOf="@+id/search_text"
                    app:layout_constraintEnd_toStartOf="@+id/search_text"
                    app:layout_constraintBottom_toTopOf="@+id/search_text"
                    app:layout_constraintHorizontal_bias="0.143"
                    app:layout_constraintTop_toBottomOf="parent" app:layout_constraintVertical_bias="0.488"/>

            <ImageButton
                    android:layout_width="37dp"
                    android:layout_height="34dp"
                    android:background="@drawable/ic_close_black_24dp"
                    android:id="@+id/cross_btn" app:layout_constraintStart_toEndOf="@+id/search_text"
                    app:layout_constraintEnd_toStartOf="@+id/search_text"
                    app:layout_constraintBottom_toTopOf="@+id/search_text"
                    app:layout_constraintHorizontal_bias="0.252"
                    app:layout_constraintTop_toBottomOf="parent" app:layout_constraintVertical_bias="0.488"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
